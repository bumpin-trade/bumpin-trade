{
  "compilerOptions": {
    "module": "ES6",
    "target": "ES2020",
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "typeRoots": ["./src/types"],
    "lib": ["DOM", "ES2020", "DOM.Iterable", "ScriptHost"],
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "tests"]
}