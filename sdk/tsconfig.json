    "module": "commonjs",
    "target": "ES2019",
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "typeRoots": ["./src/types",]
  },
  "include": ["src"],
  "exclude": ["node_modules", "tests"]
}
